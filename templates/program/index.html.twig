{% extends 'base.html.twig' %}

{% block title %}All programs
{% endblock %}

{% block body %}
	{% for category, messages in app.flashes %}
		{% for message in messages %}
			<div class="alert alert-{{ category }}">
				{{ message }}

			</div>
		{% endfor %}
	{% endfor %}

	<h1>Toutes nos séries:
	</h1>
	{% for program in programs %}
		<div>
			<h2>{{ loop.index }}
				/
				{{ program.title }}</h2>
			<p>Catégorie :
				{{ program.category.name }}</p>
			<p>Synopsis :
				{{ program.synopsis }}</p>
			<a href="{{ path("program_show", { id: program.id }) }}">Voir la fiche</a>
		</div>
	{% else %}
		Aucune série trouvée.
	{% endfor %}

	<a href="{{ path('app_index') }}">
		Retour à la page d'accueil
	</a>
{% endblock %}
