{% extends 'base.html.twig' %}

{% block title %}Wild Series
{% endblock %}
{% block stylesheets %}
	{{ parent() }}
{% endblock %}
{% block javascripts %}
	{{ parent() }}
	{{ encore_entry_script_tags('header') }}
{% endblock %}

{% block body %}
	<main>
		<div class="header">
			<div class="picture"></div>
			<div class="group">
				<div class="item img1"></div>
				<div class="item img2"></div>
				<div class="item img3"></div>
				<div class="item img4"></div>
				<div class="item img5"></div>
			</div>
		</div>
		<div class="container">
			<h1 class="my-5">Ã€ l'affiche</h1>
			<div class="row">
				{% for program in programs %}
					<div class="col-lg-4 d-flex justify-content-center col-md-6">
						<div class="card shadow mb-5 border border-0 rounded" style="width:20rem;">
							<div class="card-body">
								<h4 class="card-title fw-bolder p-3 fs-4 mb-0" style="height: 8rem">{{ program.title }}</h4>
								<p class="card-text mb-1 p-3" style="height: 10rem;">{{ program.synopsis}}</p>
								<div class="text-end p-3 btn-rounded">
									<a href="#" class="btn btn-outline-primary bg-light fw-bolder fs-6 btn-rounded rounded-pill">En savoir plus</a>
								</div>
							</div>
						</div>
					</div>
				{% endfor %}
			</div>
		</div>
	</main>

{% endblock %}
